<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#FFFFFF"
            android:fontFamily="@font/atma_semibold"
            android:text="Pavadinimas"
            android:textColor="@color/black"
            android:textSize="20dp">

        </TextView>

        <TextView
            android:id="@+id/textaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:fontFamily="@font/atma_semibold"
            android:text="Adresas"
            android:textColor="@color/black"
            android:textSize="16dp">

        </TextView>

        <TextView
            android:id="@+id/textrating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:fontFamily="@font/atma_semibold"
            android:text="Vertinimas"
            android:textColor="@color/black"
            android:textSize="16dp">

        </TextView>



    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/eiti"
            android:layout_width="105dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="128dp"
            android:background="@color/white"
            android:fontFamily="@font/atma_semibold"
            android:text="EITI Į SVETAINĘ"
            app:layout_constraintStart_toEndOf="@+id/dalintis"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/dalintis"
            android:layout_width="96dp"
            android:layout_height="37dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="128dp"
            android:background="@color/white"
            android:fontFamily="@font/atma_semibold"
            android:text="DALINTIS"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/nuorodos"
            android:layout_width="103dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="128dp"
            android:background="@color/white"
            android:fontFamily="@font/atma_semibold"
            android:text="NUORODOS"
            app:layout_constraintStart_toEndOf="@+id/eiti"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/nuotrauka"
            android:layout_width="134dp"
            android:layout_height="85dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/happy_inn" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>