<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pastel"
    tools:context=".placesToVisit">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"
        />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="408dp"
        android:layout_height="562dp"
        android:layout_marginTop="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rodytiViska" />

    <Button
        android:id="@+id/pilys"
        android:layout_width="93dp"
        android:layout_height="57dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:background="#80FFFFFF"
        android:text="Pilys"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/baznycios"
        android:layout_width="108dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="#80FFFFFF"
        android:text="Bažnyčios"
        app:layout_constraintStart_toEndOf="@+id/pilys"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/muziejai"
        android:layout_width="96dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="#80FFFFFF"
        android:text="Muziejai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/rodytiViska"
        android:layout_width="190dp"
        android:layout_height="46dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="12dp"
        android:background="#80FFFFFF"
        android:text="Rodyti viską"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pilys" />

</androidx.constraintlayout.widget.ConstraintLayout>

